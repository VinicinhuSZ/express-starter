    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "commander": "^9.3.0",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "jest": "28.1.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.7.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3",
    "uglify-js": "^3.16.0"
  },
  "dependencies": {
    "@types/supertest": "^2.0.12",
    "app-root-path": "^3.0.0",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "openapi-comment-parser": "^1.0.0",
    "swagger-ui-express": "^4.4.0",
    "yaml": "^2.1.1"
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --no-notify src/index.ts",
    "prepare": "husky install",
    "docker": "./scripts/docker",
    "coverage": "jest --coverage && xdg-open ./coverage/lcov-report/index.html &>/dev/null",
    "test": "jest",
    "watch": "jest --watch",
    "postbuild": "find build -iname \"*.js\" -exec yarn uglifyjs {} --rename --toplevel --comments '/^\\*/' --output {} \\;",
    "prebuild": "rm -rf build",
    "format": "prettier --write 'src/**/*'",
    "lint": "eslint --max-warnings=0 'src/**/*'"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --check"
    ],
    "*.ts": [
      "eslint --max-warnings=0"
    ]
  }
}
